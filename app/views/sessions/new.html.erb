<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-body">
          <h1 class="card-title h2 text-success mb-4">Login</h1>

          <%= form_tag '/sessions' do %>
            <div class="form-group">
              <%= label_tag :email %>
              <%= text_field_tag :email, nil, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= label_tag :password %>
              <%= password_field_tag :password, nil, class: 'form-control' %>
            </div>

            <%= submit_tag 'Submit', class: 'btn btn-primary mt-3' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
