<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  <div>
  <% if product.quantity == 0 %>
    <div class='btn bg-danger text-white'>Sold Out</div>
  <% end %>
  <%= button_to add_item_cart_path(product_id: product.id), 
  class: "btn#{' disabled' if product.quantity == 0}",
  method: :post, disabled: product.quantity == 0 do %>
  <%= fa_icon "shopping-cart", text: 'Add' %> 
    <% end %>
  </div>
</article>